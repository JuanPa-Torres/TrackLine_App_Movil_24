<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        android:paddingBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEventNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingBottom="4dp"
                android:text="Nombre del evento:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del evento"
                android:inputType="text" />

            <!-- Organizer -->
            <TextView
                android:id="@+id/tvOrganizerLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Organizador:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del organizador"
                android:inputType="text" />

            <!-- Award -->
            <TextView
                android:id="@+id/tvAwardLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Premio:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etAward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Medalla y premio económico"
                android:inputType="text" />

            <!-- Objective -->

            <!-- Type -->
            <TextView
                android:id="@+id/tvTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Tipo:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Trail"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvActivityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Actividad:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etActividad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Carrera"
                android:inputType="text" />

            <TextView
                android:id="@+id/tvCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Categorías:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbMen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hombres" />

                <CheckBox
                    android:id="@+id/cbWomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Mujeres" />

                <CheckBox
                    android:id="@+id/cbChildren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Niños" />

            </LinearLayout>

            <!-- Start Date -->
            <TextView
                android:id="@+id/tvStartDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Fecha de inicio del registro:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- TextView para mostrar la fecha -->
                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Seleccionar fecha"
                    android:padding="8dp"
                    android:textSize="16sp" />

                <!-- Ícono para el DatePicker -->
                <ImageView
                    android:id="@+id/ivDatePicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Abrir DatePicker"
                    android:padding="8dp"
                    android:src="@drawable/agenda" />
            </LinearLayout>

            <!-- Event Date -->
            <TextView
                android:id="@+id/tvEventDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Fecha del evento:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDate2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="Seleccionar fecha"
                    android:padding="8dp"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ivDatePicker2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="Abrir DatePicker"
                    android:padding="8dp"
                    android:src="@drawable/agenda" />
            </LinearLayout>

            <!-- Facebook Link -->
            <TextView
                android:id="@+id/tvFacebookLinkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Enlace de Facebook:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etFacebookLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="https://web.facebook.com"
                android:inputType="textUri" />

            <!-- WhatsApp Link -->
            <TextView
                android:id="@+id/tvWhatsappLinkLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:text="Enlace de WhatsApp:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etWhatsappLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="https://www.whatsapp.com"
                android:inputType="textUri" />

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp" />


            <Button
                android:id="@+id/btnLimpiarMarcas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/purple_500"
                android:text="Limpiar marcas"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/image_border"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/image_plus" />
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/purple_500"
                android:text="Guardar Evento"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
