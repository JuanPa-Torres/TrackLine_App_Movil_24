<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/cardEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="10dp"
        android:background="#F8F8F8"
        android:clipToOutline="true"
        android:elevation="20dp">

        <TextView
            android:id="@+id/cardEventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eventos"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="93dp"
            android:background="@drawable/flag" />

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="AÃ±ade carreras u otros eventos"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp" />

        <Button
            android:id="@+id/eventoCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_500"
            android:text="Buscar un evento"
            android:textColor="@android:color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/cardPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardEvent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#F8F8F8"
        android:clipToOutline="true"
        android:elevation="20dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/cardPlanEntrenamientoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rutas"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_gravity="center"
            android:layout_height="102dp"
            android:background="@drawable/route" />

        <TextView
            android:id="@+id/planCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Explora las rutas disponibles"
            android:gravity="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="14sp" />

        <Button
            android:id="@+id/planCardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/purple_500"
            android:text="Buscar una ruta"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>